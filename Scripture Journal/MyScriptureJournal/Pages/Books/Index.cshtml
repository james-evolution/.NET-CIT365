@page
@model MyScriptureJournal.Pages.Books.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="button_link" id="create_link">Create New</a>
</p>

<br />

<form>
    <p>
        Book: <input type="text" asp-for="BookSearchString" />
        <input type="submit" value="Filter" />
        Note: <input type="text" asp-for="NoteSearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.BookSort">
                    @Html.DisplayNameFor(model => model.Book[0].BookName)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.Book[0].DateAdded)
                 </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Chapter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Verse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Book) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chapter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Verse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID" class="button_link">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID" class="button_link">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID" class="button_link">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
